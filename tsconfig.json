{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "target": "ES2020",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  }
}
